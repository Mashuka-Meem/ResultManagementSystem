@{
    ViewData["Title"] = "Update Login Information ";
}

<!-- Navbar -->
@{
    ViewData["Message1"] = "Admin";
    ViewData["MessageA"] = "Admin";
    ViewData["Message2"] = "Update Login Information";
}

<!-- Update -->
<form asp-controller="Admin" asp-action="SaveLoginUpdate" class="panel panel-body" method="post">
    <div class="form-group">
        <label class="col-sm-4">Id</label>
        <div class="col-sm-8">
            <input type="text" name="Id" class="form-control">
        </div>
        <br /><br />
        <label class="col-sm-4">Password</label>
        <div class="col-sm-8">
            <input type="password" name="Password" class="form-control">
        </div>
        <br /><br />
        <label class="col-sm-4">ActorId</label>
        <div class="col-sm-8">
            <input type="text" name="ActorId" class="form-control">
        </div>
        <br /><br /><br />
        <div class="col-md-offset-2 col-md-10">
            <input asp-action="SaveLoginUpdate" type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>
</form>


