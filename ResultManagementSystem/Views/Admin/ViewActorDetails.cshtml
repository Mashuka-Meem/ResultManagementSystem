@model ResultManagementSystem.Models.ActorList

@{
    ViewData["Title"] = "View Actor Details Page";
}

<!-- Navbar -->
@{
    ViewData["Message1"] = "Admin";
    ViewData["MessageA"] = "Admin";
    ViewData["Message2"] = "View Actor Information";
}

<!-- Search -->
<form asp-controller="Admin" asp-action="ViewActorDetails" class="col-sm-12" method="post">
    <center>
        <div class="form-group">
            <label class="col-sm-4">Actor ID:</label>
            <div class="col-sm-8">
                <input type="text" name="Id" class="form-control">
            </div>
            <br><br><br>
            <div class="col-md-offset-2 col-md-10">
                <input asp-action="ViewActorDetails" type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </center>
</form>

<!-- Actor list -->
<div class="col-sm-12">
    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100">
            <thead>
                <tr>
                    <th>Actor Id</th>
                    <th>Actortype</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.ActorAll)
                {
                    <tr>
                        @*<input type="text" name="Id" class="form-control" value="@data.ActorType">*@
                        <td class="showDetails pointer">@data.ActorId</td>
                        <td class="showDetails pointer">@data.ActorType</td>
                        <td>
                            <a asp-action="UpdateActorInformation" asp-route-id="@data.ActorId">Update</a>
                            <a asp-action="DeleteActorInformation" asp-route-id="@data.ActorId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>