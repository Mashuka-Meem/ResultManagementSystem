@model ResultManagementSystem.Models.LoginList

@{
    ViewData["Title"] = "View Login Details Page";
}

<!-- Navbar -->
@{
    ViewData["Message1"] = "Admin";
    ViewData["MessageA"] = "Admin";
    ViewData["Message2"] = "View Login Information";
}

<!-- Search -->
<form asp-controller="Admin" asp-action="ViewLoginDetails" class="col-sm-12" method="post">
    <center>
        <div class="form-group">
            <label class="col-sm-4">ID:</label>
            <div class="col-sm-8">
                <input type="text" name="Id" class="form-control">
            </div>
            <br><br><br>
            <div class="col-md-offset-2 col-md-10">
                <input asp-action="ViewLoginDetails" type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </center>
</form>

<!-- Login list -->
<div class="col-sm-12">
    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Password</th>
                    <th>Actor Id</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.LoginAll)
                {
                    <tr title="Click Here to See Details">
                        <td class="showDetails pointer">@data.Id</td>
                        <td class="showDetails pointer">@data.Password</td>
                        <td class="showDetails pointer">@data.ActorId</td>
                        <td>
                            <a asp-action="UpdateLoginInformation" asp-route-id="@data.Id">Update</a>
                            <a asp-action="DeleteLoginInformation" asp-route-id="@data.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
