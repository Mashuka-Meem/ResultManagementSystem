@{
    ViewData["Title"] = "Add Teacher Information";
}

<!-- Navbar -->
@{
    ViewData["Message1"] = "Register";
    ViewData["MessageR"] = "Register";
    ViewData["Message2"] = "Add Teacher Information";
}

<!-- Add teacher -->
<form asp-controller="Register" asp-action="SaveTeacher" class="panel panel-body" method="post">
    <div class="form-group">
        <div class="col-sm-6">
            <label>Id</label>
            <input type="text" name="Id" class="form-control">
            <label>Name</label>
            <input type="text" name="Name" class="form-control">
            <label>Designation</label>
            <input type="text" name="Designation" class="form-control">
            <label>Contact</label>
            <input type="text" name="Contact" class="form-control">
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input asp-action="SaveTeacher" type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


