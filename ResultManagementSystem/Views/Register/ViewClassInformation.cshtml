@model ResultManagementSystem.Models.ClassList
@*@{
        Layout = null;
    }*@

@{
    ViewData["Title"] = "View Course Information Page";
}

<!-- Navbar -->
@{
    ViewData["Message1"] = "Register";
    ViewData["MessageR"] = "Register";
    ViewData["Message2"] = "View Class Information";
}

<!-- search -->
<form asp-controller="Admin" asp-action="ViewClassInformation" class="col-sm-12" method="post">
    <center>
        <div class="form-group">
            <div class="col-sm-6">
                <label>Class:</label>
                <input type="text" name="Id" class="form-control">
                <br><br><br>
                <div class="col-md-offset-2 col-md-10">
                    <input asp-action="ViewClassInformation" type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    </center>
</form>

<!-- class list -->
<div class="col-sm-12">
    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100">
            <thead>
                <tr>
                    <th>Class Id</th>
                    <th>Class</th>
                    <th>Course Code</th>
                    <th>Teacher Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.ClassAll)
                {
                    <tr>
                        <td class="showDetails pointer">@data.ClassId</td>
                        <td class="showDetails pointer">@data.Class</td>
                        <td class="showDetails pointer">@data.CourseCode</td>
                        <td class="showDetails pointer">@data.Id</td>
                        <td>
                            <a asp-action="UpdateClassInformation" asp-route-id="@data.ClassId">Update</a>
                            <a asp-action="DeleteClassInformation" asp-route-id="@data.ClassId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
