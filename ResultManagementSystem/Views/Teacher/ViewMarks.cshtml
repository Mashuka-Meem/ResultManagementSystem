@model ResultManagementSystem.Models.MarksList

@{
    ViewData["Title"] = "View Marks";
}
<!-- Navbar -->
@{
    ViewData["Message1"] = "Teacher";
    ViewData["MessageT"] = "Teacher";
    ViewData["Message2"] = "View Marks";
}

<!-- Marks list -->
<div class="col-sm-12">
    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Class</th>
                    <th>Roll</th>
                    <th>Course Code</th>
                    <th>Exam</th>
                    <th>Marks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.MarksAll)
                {
                    <tr>
                        <td class="showDetails pointer">@data.Id</td>
                        <td class="showDetails pointer">@data.Class</td>
                        <td class="showDetails pointer">@data.Roll</td>
                        <td class="showDetails pointer">@data.CourseCode</td>
                        <td class="showDetails pointer">@data.Exam</td>
                        <td class="showDetails pointer">@data.Mark</td>
                        <td>
                            <a asp-action="UpdateMarksInformation" asp-route-id="@data.Id">Update</a>
                            <a asp-action="DeleteMarksInformation" asp-route-id="@data.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>